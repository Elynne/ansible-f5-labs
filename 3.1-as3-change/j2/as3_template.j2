"web_app": {
    "class": "Application",
    "service": {
        "class": "Service_HTTPS",
        "virtualAddresses": [
            "{{private_ip}}"
        ],
        "pool": "app_pool",
        "serverTLS": "webtls"
    },
    "app_pool": {
        "class": "Pool",
        "monitors": [
            "http"
        ],
        "members": [
            {
                "servicePort": 80,
                "serverAddresses": [
                    {% set comma = joiner(",") %}
                    {% for mem in pool_members %}
                        {{comma()}} "{{  hostvars[mem]['ansible_host']  }}"
                    {% endfor %}

                ]
            }
        ]
    }
}
